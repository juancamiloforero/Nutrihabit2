<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="TituloGrande" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#00FF00</item>
        <item name="android:textSize">60sp</item>
    </style>
    <style name="TituloMediano" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#0091EA</item>
        <item name="android:textSize">30sp</item>
    </style>
    <style name="TituloPequenio" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#6200EA</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">#0091EA</item>
    </style>
    <style name="TextoNormal" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">#0091EA</item>
    </style>
</resources>